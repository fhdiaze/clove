{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": ".\\build.ps1",
            "args": [
                "-SourceFile", "${file}",
                "-BuildMode", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": ".\\build.ps1",
            "args": [
                "-SourceFile", "${file}",
                "-BuildMode", "Release"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"]
        }
    ]
}